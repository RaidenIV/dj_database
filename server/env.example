# Required (Railway Mongo service provides MONGO_URL; you can map it to MONGODB_URI)
MONGODB_URI=mongodb://USER:PASSWORD@HOST:PORT/?authSource=admin

# Optional: logical DB name
DB_NAME=xmg_dj_database

# Admin auth (recommended for any public deployment)
ADMIN_TOKEN=replace-with-a-long-random-string

# Optional toggles
PUBLIC_SUBMISSIONS=false
NODE_ENV=production

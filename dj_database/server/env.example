# Required
MONGODB_URI=mongodb+srv://USER:PASS@HOST/YOUR_DB_NAME?retryWrites=true&w=majority

# Recommended: separate logical DB name for the DJ app
DB_NAME=xmg_dj_database

# Restrict browser origins allowed to call the API
ALLOWED_ORIGINS=https://www.xodiamediagroup.com,https://xodiamediagroup.com

# Admin auth for reads/writes (recommended). If unset, API allows requests without auth.
ADMIN_TOKEN=replace-with-a-long-random-string

# Optional toggles
PUBLIC_SUBMISSIONS=false
ALLOW_NULL_ORIGIN=false
NODE_ENV=production
